{
  "name": "vscode-metalua-formatter",
  "displayName": "vscode-metalua-formatter",
  "description": "Metalua-based formatter for vscode ",
  "version": "1.1.0",
  "icon": "lua-logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/geappliances/vscode-metalua-formatter.git"
  },
  "keywords": [
    "Lua",
    "format",
    "metalua"
  ],
  "publisher": "arivero",
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:lua"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "vscode-metalua-formatter",
      "properties": {
        "vscode-metalua-formatter.customLuaPath": {
          "type": "string",
          "default": "",
          "description": "Lua 5.1 stand-alone interpreter path. Optional. Leave blank to use the extension-provided interpreter."
        },
        "vscode-metalua-formatter.indentSize": {
          "type": "integer",
          "default": 2,
          "description": "Specifies the indentation used to format the file."
        }
      }
    }
  },
  "scripts": {
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.38.0",
    "eslint": "^5.13.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "typescript": "^3.3.1",
    "vscode-test": "^1.2.0"
  }
}
